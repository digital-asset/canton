---
extends: default

#locale: en_US.UTF-8

yaml-files:
  - '*.yaml'
  - '*.yml'

ignore: |
  .circleci/_config.yml
  .circleci/config.yml

rules:
  commas:
    max-spaces-before: 0
    min-spaces-after: 1
    max-spaces-after: 1
    level: warning
  brackets:
    forbid: false
    min-spaces-inside: 0
    max-spaces-inside: 0
    min-spaces-inside-empty: -1
    max-spaces-inside-empty: -1
    level: warning
  empty-lines:
    max: 2
    max-start: 1
    max-end: 3
    level: warning
  new-line-at-end-of-file:
    level: warning
  new-lines:
    type: unix
    level: warning
  line-length:
    max: 165
    allow-non-breakable-words: true
    allow-non-breakable-inline-mappings: false
    level: warning
  comments: disable
  comments-indentation: disable
  document-start: disable
  empty-lines:
    level: warning
  hyphens:
    level: warning
  indentation:
    level: warning
    indent-sequences: consistent
  truthy: disable
